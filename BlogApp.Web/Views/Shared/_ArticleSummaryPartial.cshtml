@model BlogApp.Web.Models.ArticleViewModel

<div class="card mb-4 shadow-sm">
    <div class="row g-0">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="col-md-4">
                <a asp-controller="Articles" asp-action="Details" asp-route-id="@Model.Id">
                    <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Title" style="height: 100%; object-fit: cover;">
                </a>
            </div>
        }
        <div class="@(string.IsNullOrEmpty(Model.ImageUrl) ? "col-md-12" : "col-md-8")">
            <div class="card-body d-flex flex-column h-100">
                <h5 class="card-title">
                    <a asp-controller="Articles" asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none text-dark">
                        @Html.DisplayFor(modelItem => Model.Title)
                    </a>
                </h5>
                <p class="card-text mb-1">
                    <small class="text-muted">
                        By @Html.DisplayFor(modelItem => Model.AuthorName) on @Model.PublishedDate.ToString("MMM dd, yyyy")
                    </small>
                </p>
                <p class="card-text flex-grow-1">
                    @Html.Raw(Model.Content)
                </p>
                <div class="mt-auto text-end">
                    <a asp-controller="Articles" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">Read More »</a>
                </div>
            </div>
        </div>
    </div>
</div>