@model BlogApp.Web.Models.ArticleViewModel

@{
    ViewData["Title"] = "Delete Article";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger">Are you sure you want to delete this article?</h3>
<div>
    <h4>Article: "@Html.DisplayFor(model => model.Title)"</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuthorName)
        </dd>
        @* Add other fields if helpful for confirmation *@
    </dl>

    @* Display Error Message if redirected back from POST failure *@
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="Delete" method="post">
        @* Target the DeleteConfirmed POST action * G/
        @* The ActionName("Delete") attribute on DeleteConfirmed maps this *@
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" /> @* Pass the ID to the POST action *@
        <button type="submit" class="btn btn-danger">Delete Article</button> |
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a> @* Go back to Details *@
    </form>
</div>